<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="25dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_page_back"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:src="@drawable/image" />

            <TextView
                android:id="@+id/headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEWS Headline"
                android:textColor="@color/black"
                android:fontFamily="@font/europeantypewriter"
                android:layout_margin="10dp"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/smalltypewriting"
                android:text="Lorem ipsum dolor sit amet, In ultrices massa quis vulputate placerat. Suspendisse ut ligula ac ipsum accumsan convallis. Curabitur sodales mattis lacus et faucibus. In ex tellus, hendrerit nec libero at, porta vestibulum est. Phasellus hendrerit ligula nulla, id hendrerit urna viverra ut. Aliquam volutpat semper risus tempor vestibulum. Etiam rhoncus finibus lectus sit amet lobortis. Nunc porttitor sodales est, quis consectetur purus sagittis quis. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Vestibulum lorem metus, rutrum eleifend orci nec."
                android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:weightSum="4"
                    android:orientation="horizontal">
                <ImageView
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/like"
                    android:tag="like"
                    android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/dislike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="dislike"
                        android:src="@drawable/dislike"
                        android:tag="dislike" />

                <ImageView
                    android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/share" />

                    <ImageView
                        android:id="@+id/favourite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="favourite"
                        android:src="@drawable/favourites"
                        android:tag="favourite" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:textColor="@color/black"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:fontFamily="@font/europeantypewriter"
                    android:text="Date:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/date_fetch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="@color/black"
                    android:fontFamily="@font/smalltypewriting"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/publisher"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publisher:"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:fontFamily="@font/europeantypewriter"
                    android:textSize="20sp"
                     />
                <TextView
                    android:id="@+id/publisher_fetch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="@color/black"
                    android:fontFamily="@font/smalltypewriting"
                    android:textSize="15sp" />

            </LinearLayout>

            <Button
                android:id="@+id/visit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:hint="VISIT"
                android:fontFamily="@font/smalltypewriting"
                android:background="@drawable/log_in_button_design"
                android:layout_margin="25dp"
    />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>